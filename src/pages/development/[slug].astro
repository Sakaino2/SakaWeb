---
import { getCollection, render, type CollectionEntry } from "astro:content";
import ProjectLayout from "../../layouts/ProjectLayout.astro";
import { MediaCarousel } from "@/components/portfolio/MediaCarousel";
import Prose from "@/components/general/Prose.astro";
import type { DevProject } from "@/models/collections.model";

export async function getStaticPaths() {
  const allDevProjects: DevProject[] = await getCollection("dev-projects");

  return allDevProjects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;

const { Content } = await render(project);
---

<ProjectLayout project={project}>
  <Prose>
    <Content />
  </Prose>
  {
    project.data.media && (
      <MediaCarousel media={project.data.media} client:load />
    )
  }
</ProjectLayout>
