---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<div class="card">
  <div class="img-container">
    <img src={href} alt="" />
  </div>
  <div class="text">
    <h2>{title}</h2>
    <p>{body}</p>
  </div>
</div>

<style>
  .card {
    background: var(--accent-pink-gradient-solid);
    border-radius: 16px;
    min-height: 130px;
    /* box-shadow: 0 1rem 1.5rem -0.5rem rgb(0 50 100 / 0.15); */
    display: grid;
    align-items: center;
    column-gap: 1rem;
    grid-template-columns: 1fr 3fr;
  }

  .text {
    grid-column: 2;
    grid-row: 1;
    color: #edf0f1;
    padding: 0 10px;
    width: 100%;
  }

  .text h2 {
    text-align: left;
    color: var(--accent-blue);
    font-size: 20px;
  }

  .text p {
    padding-top: 7px;
    text-align: left;
    color: var(--accent-black);
    font-size: 12px;
    line-height: 1.2;
    font-weight: 500;
  }

  .img-container {
    grid-column: 1;
    grid-row: 1;
    align-self: left;
    max-width: 130px;
  }

  img {
    min-height: 130px;
    max-width: 130px;
    object-fit: cover;
    border-radius: 16px 0 0 16px;
  }

  @media (min-width: 800px) {
    .text h2 {
      font-size: 24px;
    }
    .text p {
      font-size: 15px;
      line-height: 1.4;
    }
  }
</style>
