---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<div class="card">
  <h3>{title}</h3>
  <p>{text}</p>
</div>

<style>
  .card {
    display: grid;
    align-items: center;
    padding-bottom: 35px;
  }
  h3 {
    font-weight: 800;
    font-size: 30px;
    margin-bottom: 10px;
    color: var(--accent-pink);
  }
  p {
    font-weight: 600;
    max-width: 80%;
    margin: 0 auto;
  }
</style>
