---
interface Props {
  title: string;
  subtitle: string;
  bgImage: string;
}

const { title, subtitle, bgImage } = Astro.props;
---

<section
  class="relative w-full flex flex-col items-center justify-start text-center text-white overflow-hidden py-40 sm:rounded-b-xl"
>
  <div class="absolute inset-0 z-0">
    <div
      class="w-full h-full bg-cover bg-center bg-fixed"
      style={`background-image: url('${bgImage}');`}
    >
    </div>
    <div class="absolute inset-0 bg-black opacity-50"></div>
  </div>

  <div class="relative z-10 max-w-4xl p-8">
    <h1 class="text-5xl md:text-6xl font-extrabold mb-4 leading-tight">
      {title}
    </h1>
    <p class="text-xl md:text-2xl font-light mb-8">
      {subtitle}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <slot />
    </div>
  </div>
</section>
