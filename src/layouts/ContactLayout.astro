---
import HighlightCard from "../components/HighlightCard.astro";
import Form from "../components/Form.astro";
---

<div class="wrapper">
  <div class="img-container">
    <img src="mock-img.jpeg" alt="contact image" />
  </div>
  <div class="form-container">
    <Form />
  </div>
</div>

<style>
  .wrapper {
    margin-inline: auto;
    text-align: center;
    padding: 0 20px;
    max-width: 1080px;
    width: 100%;
    display: grid;
    align-items: top;
    grid-auto-columns: 1fr;
    grid-template-rows: repeat(1, 1fr);
    grid-template-columns: 1fr;
    column-gap: 2rem;
    row-gap: 2rem;
  }

  img {
    width: 100%;
    height: 100%;
    border-radius: 20px;
    object-fit: cover;
  }

  .img-container {
    max-height: 720px;
  }

  p {
    font-weight: 600;
    padding-bottom: 30px;
  }

  @media (min-width: 800px) {
    .wrapper {
      grid-template-columns: 1fr 1fr;
    }
    .nosotros {
      text-align: left;
    }
  }
</style>
