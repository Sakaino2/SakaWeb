---
import "@fontsource-variable/montserrat";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-pink: #faa4bd;
    --accent-yellow: #ffcd29;
    --accent-blue: #2e6171;
    --accent-black: #333333;
    --accent-black-transparent: rgba(51, 51, 51, 0.3);
    --accent-white: #ffffff;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --accent-pink-gradient: linear-gradient(
      to bottom,
      rgba(255, 226, 226, 0) 0%,
      rgba(250, 164, 189, 0.3) 30%,
      rgba(250, 164, 189, 1) 100%
    );
    --accent-pink-gradient-solid: linear-gradient(
      to right,
      rgba(255, 226, 226, 1) 0%,
      rgba(250, 164, 189, 1) 100%
    );
    --accent-blue-gradient: linear-gradient(
      to bottom,
      rgba(46, 97, 113, 1) 0%,
      rgba(75, 86, 95, 1) 100%
    );
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  * {
    margin: 0;
    padding: 0;
  }

  html {
    font-family: "Montserrat Variable", sans-serif;
    background: #ffffff;
    line-height: 1.7;
    font-weight: 700;
    font-size: 16px;
    background-size: 224px;
    scroll-behavior: smooth;
  }

  button {
    font-family: "Montserrat Variable", sans-serif;
    line-height: 1.7;
    font-weight: 700;
    font-size: 16px;
  }

  img {
    max-width: 100%;
    display: block;
  }

  h1,
  h2,
  h3 {
    line-height: 1;
  }

  body {
    overflow-x: hidden;
  }
</style>
