---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import type { CollectionEntry } from "astro:content";
import { BackButton } from "@/components/portfolio/BackButton";
import Header from "@/components/general/Header.astro";
import Footer from "@/components/general/Footer.astro";
import Container from "@/components/general/Container.astro";
import SectionTitle from "@/components/general/SectionTitle.astro";
import "@fontsource-variable/outfit";

interface Props {
  project: CollectionEntry<"dev-projects"> | CollectionEntry<"design-projects">;
}
const { project } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logos/logo-icon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{project.data.title}</title>
    <ClientRouter />
  </head>
  <body>
    <Header />
    <main>
      <section
        class="relative w-full h-96 flex items-center justify-center overflow-hidden"
      >
        <div
          class="absolute inset-0 z-0 w-full h-full bg-cover bg-center"
          style={`background-image: url('${project.data.thumbnail}');`}
          transition:name={`project-image-${project.id}`}
        >
        </div>
        <div class="absolute inset-0 bg-black opacity-50 z-10"></div>
        <h1 class="relative z-20 text-white text-5xl font-bold">
          {project.data.title}
        </h1>
      </section>
      <Container>
        <div class="flex justify-between my-8">
          <SectionTitle>
            {project.data.title}
          </SectionTitle>
          <BackButton client:load />
        </div>
        <slot />
      </Container>
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
